<resources>

    <style name="Theme.octave" parent="Theme.octave.Base">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:textViewStyle">@style/TextViewStyleIm</item>
    </style>

    <style name="Theme.octave.Light" parent="Theme.octave.Base.Light">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:textViewStyle">@style/TextViewStyleIm</item>
    </style>

    <style name="Theme.octave.Black" parent="Theme.octave.Base.Black">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:textViewStyle">@style/TextViewStyleIm</item>
        <item name="android:windowBackground">@color/window_color_dark</item>
    </style>

    <style name="Theme.octave.FollowSystem" parent="Theme.octave.Base.Adaptive">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:textViewStyle">@style/TextViewStyleIm</item>
        <item name="android:windowBackground">@color/window_color</item>
    </style>

    <style name="Theme.octave.Notification" parent="@android:style/TextAppearance.Material.Notification" />

    <style name="Theme.octave.Notification.Title" parent="@android:style/TextAppearance.Material.Notification.Title" />

    <style name="MusicProgressSlider" parent="MusicProgressSliderParent">
        <item name="android:padding">0dp</item>
    </style>

</resources>